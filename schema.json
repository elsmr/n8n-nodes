{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://n8n.io/schemas/node.json",
  "title": "n8n Node Definition",
  "description": "Schema for n8n node configuration files",
  "type": "object",
  "required": ["displayName", "name", "group", "version", "description", "defaults", "inputs", "outputs", "properties"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Reference to this JSON schema"
    },
    "displayName": {
      "type": "string",
      "description": "The human-readable name displayed in the n8n UI"
    },
    "name": {
      "type": "string",
      "description": "The internal identifier for the node (camelCase)",
      "pattern": "^[a-z][a-zA-Z0-9]*$"
    },
    "icon": {
      "type": "string",
      "description": "Icon for the node (file:filename.svg or fa:icon-name)",
      "pattern": "^(file:|fa:).+"
    },
    "group": {
      "type": "array",
      "description": "Categories this node belongs to",
      "items": {
        "type": "string",
        "enum": ["transform", "trigger", "input", "output"]
      },
      "minItems": 1
    },
    "version": {
      "type": "integer",
      "description": "Version number of the node",
      "minimum": 1
    },
    "subtitle": {
      "type": "string",
      "description": "Subtitle expression displayed under the node (can use n8n expressions)"
    },
    "description": {
      "type": "string",
      "description": "Brief description of what the node does"
    },
    "defaults": {
      "type": "object",
      "description": "Default values for the node",
      "properties": {
        "name": {
          "type": "string",
          "description": "Default name when node is added to workflow"
        }
      },
      "required": ["name"]
    },
    "usableAsTool": {
      "type": "boolean",
      "description": "Whether this node can be used as a tool in AI agent workflows"
    },
    "inputs": {
      "type": "array",
      "description": "Input connection types",
      "items": {
        "type": "string",
        "enum": ["main"]
      },
      "minItems": 1
    },
    "outputs": {
      "type": "array",
      "description": "Output connection types",
      "items": {
        "type": "string",
        "enum": ["main"]
      },
      "minItems": 1
    },
    "credentials": {
      "type": "array",
      "description": "Credentials required by this node",
      "items": {
        "type": "object",
        "required": ["name", "required"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the credential type"
          },
          "required": {
            "type": "boolean",
            "description": "Whether this credential is required"
          }
        }
      }
    },
    "requestDefaults": {
      "type": "object",
      "description": "Default settings for HTTP requests",
      "properties": {
        "returnFullResponse": {
          "type": "boolean",
          "description": "Whether to return the full HTTP response"
        },
        "baseURL": {
          "type": "string",
          "description": "Base URL for API requests (can use n8n expressions)"
        },
        "headers": {
          "type": "object",
          "description": "Default headers to include in requests",
          "additionalProperties": {
            "type": "string"
          }
        }
      }
    },
    "properties": {
      "type": "array",
      "description": "Configuration properties for the node",
      "items": {
        "type": "object",
        "required": ["displayName", "name", "type"],
        "properties": {
          "displayName": {
            "type": "string",
            "description": "Label shown in the UI for this property"
          },
          "name": {
            "type": "string",
            "description": "Internal name for the property",
            "pattern": "^[a-zA-Z][a-zA-Z0-9]*$"
          },
          "type": {
            "type": "string",
            "description": "Type of the input field",
            "enum": ["string", "number", "boolean", "options", "multiOptions", "collection", "fixedCollection", "json", "dateTime", "color", "hidden"]
          },
          "noDataExpression": {
            "type": "boolean",
            "description": "Whether to disable n8n expressions for this field"
          },
          "options": {
            "type": "array",
            "description": "Available options for 'options' or 'multiOptions' type",
            "items": {
              "type": "object",
              "required": ["name", "value"],
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Display name of the option"
                },
                "value": {
                  "type": ["string", "number", "boolean"],
                  "description": "Value of the option"
                },
                "description": {
                  "type": "string",
                  "description": "Optional description of the option"
                }
              }
            }
          },
          "default": {
            "description": "Default value for the property",
            "oneOf": [
              { "type": "string" },
              { "type": "number" },
              { "type": "boolean" },
              { "type": "object" },
              { "type": "array" }
            ]
          },
          "required": {
            "type": "boolean",
            "description": "Whether this property is required"
          },
          "description": {
            "type": "string",
            "description": "Help text for the property"
          },
          "placeholder": {
            "type": "string",
            "description": "Placeholder text shown in the input field"
          },
          "displayOptions": {
            "type": "object",
            "description": "Conditions for when to display this property",
            "properties": {
              "show": {
                "type": "object",
                "description": "Show this property when these conditions match",
                "additionalProperties": {
                  "type": "array",
                  "items": {
                    "type": ["string", "number", "boolean"]
                  }
                }
              },
              "hide": {
                "type": "object",
                "description": "Hide this property when these conditions match",
                "additionalProperties": {
                  "type": "array",
                  "items": {
                    "type": ["string", "number", "boolean"]
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
