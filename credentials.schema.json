{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://n8n.io/schemas/credentials.json",
  "title": "n8n Credentials Definition",
  "description": "Schema for n8n credentials configuration files",
  "type": "object",
  "required": ["name", "displayName", "properties"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Reference to this JSON schema"
    },
    "name": {
      "type": "string",
      "description": "The internal identifier for the credentials (camelCase)",
      "pattern": "^[a-z][a-zA-Z0-9]*$"
    },
    "displayName": {
      "type": "string",
      "description": "The human-readable name displayed in the n8n UI"
    },
    "documentionUrl": {
      "type": "string",
      "description": "URL to documentation for these credentials",
      "format": "uri"
    },
    "icon": {
      "type": "string",
      "description": "Icon for the credentials (file:filename.svg or fa:icon-name)",
      "pattern": "^(file:|fa:).+"
    },
    "properties": {
      "type": "array",
      "description": "Configuration properties for the credentials",
      "items": {
        "type": "object",
        "required": ["displayName", "name", "type"],
        "properties": {
          "displayName": {
            "type": "string",
            "description": "Label shown in the UI for this property"
          },
          "name": {
            "type": "string",
            "description": "Internal name for the property",
            "pattern": "^[a-zA-Z][a-zA-Z0-9]*$"
          },
          "type": {
            "type": "string",
            "description": "Type of the input field",
            "enum": ["string", "number", "boolean", "options", "multiOptions", "collection", "fixedCollection", "json", "dateTime", "color", "hidden"]
          },
          "required": {
            "type": "boolean",
            "description": "Whether this property is required"
          },
          "typeOptions": {
            "type": "object",
            "description": "Additional options for the field type",
            "properties": {
              "password": {
                "type": "boolean",
                "description": "Whether to mask the input as a password field"
              },
              "minValue": {
                "type": "number",
                "description": "Minimum value for number types"
              },
              "maxValue": {
                "type": "number",
                "description": "Maximum value for number types"
              }
            }
          },
          "default": {
            "description": "Default value for the property",
            "oneOf": [
              { "type": "string" },
              { "type": "number" },
              { "type": "boolean" },
              { "type": "object" },
              { "type": "array" }
            ]
          },
          "description": {
            "type": "string",
            "description": "Help text for the property"
          },
          "placeholder": {
            "type": "string",
            "description": "Placeholder text shown in the input field"
          },
          "options": {
            "type": "array",
            "description": "Available options for 'options' or 'multiOptions' type",
            "items": {
              "type": "object",
              "required": ["name", "value"],
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Display name of the option"
                },
                "value": {
                  "type": ["string", "number", "boolean"],
                  "description": "Value of the option"
                },
                "description": {
                  "type": "string",
                  "description": "Optional description of the option"
                }
              }
            }
          },
          "displayOptions": {
            "type": "object",
            "description": "Conditions for when to display this property",
            "properties": {
              "show": {
                "type": "object",
                "description": "Show this property when these conditions match",
                "additionalProperties": {
                  "type": "array",
                  "items": {
                    "type": ["string", "number", "boolean"]
                  }
                }
              },
              "hide": {
                "type": "object",
                "description": "Hide this property when these conditions match",
                "additionalProperties": {
                  "type": "array",
                  "items": {
                    "type": ["string", "number", "boolean"]
                  }
                }
              }
            }
          }
        }
      },
      "minItems": 1
    },
    "authenticate": {
      "type": "object",
      "description": "Authentication configuration",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "description": "The type of authentication",
          "enum": ["generic", "oauth2", "basic", "bearer"]
        },
        "properties": {
          "type": "object",
          "description": "Authentication properties",
          "properties": {
            "headers": {
              "type": "object",
              "description": "Headers to include for authentication",
              "additionalProperties": {
                "type": "string"
              }
            },
            "body": {
              "type": "object",
              "description": "Body parameters to include for authentication",
              "additionalProperties": {
                "type": "string"
              }
            },
            "qs": {
              "type": "object",
              "description": "Query string parameters to include for authentication",
              "additionalProperties": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "test": {
      "type": "object",
      "description": "Configuration for testing the credentials",
      "properties": {
        "request": {
          "type": "object",
          "description": "HTTP request to test the credentials",
          "properties": {
            "url": {
              "type": "string",
              "description": "URL to test (can use n8n expressions)",
              "format": "uri"
            },
            "method": {
              "type": "string",
              "description": "HTTP method for the test request",
              "enum": ["GET", "POST", "PUT", "DELETE", "PATCH", "HEAD", "OPTIONS"],
              "default": "GET"
            },
            "headers": {
              "type": "object",
              "description": "Headers for the test request",
              "additionalProperties": {
                "type": "string"
              }
            },
            "body": {
              "type": "object",
              "description": "Body for the test request"
            }
          },
          "required": ["url"]
        }
      }
    }
  }
}
