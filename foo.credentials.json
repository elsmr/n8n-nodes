{
  "$schema": "./credentials.schema.json",
  "name": "fooApi",
  "displayName": "Foo API",
  "documentionUrl": "https://docs.foo.com",
  "icon": "file:foo.svg",
  "properties": [
    {
      "displayName": "API Key",
      "name": "apiKey",
      "type": "string",
      "required": true,
      "typeOptions": {
        "password": true
      },
      "default": ""
    }
  ],
  "authenticate": {
    "type": "generic",
    "properties": {
      "headers": {
        "X-API-Key": "={{$credentials.apiKey}}"
      }
    }
  },
  "test": {
    "request": {
      "url": "https://api.foo.com/v1/status"
    }
  }
}
